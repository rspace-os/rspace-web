<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-11-30" context="run" author="fraser">
        <comment>Add new column for tracking whether stoichiometry link reduces stock</comment>
        <addColumn tableName="StoichiometryInventoryLink">
            <column type="boolean" name="reduces_stock" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <comment>Add new column for tracking whether stoichiometry link reduces stock</comment>
        <addColumn tableName="StoichiometryInventoryLink_AUD">
            <column type="boolean" name="reduces_stock" defaultValueBoolean="false">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>