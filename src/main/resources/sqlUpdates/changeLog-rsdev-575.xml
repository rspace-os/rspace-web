<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-06-19a" context="run" author="fraser">
        <comment>Create a new app - Ascenscia</comment>
        <insert tableName="App">
            <column name="id" type="NUMERIC" value="NULL" />
            <column name="label" type="STRING" value="Ascenscia" />
            <column name="name" type="STRING" value="app.ascenscia" />
            <column name="defaultEnabled" type="BOOLEAN" valueBoolean="false" />
        </insert>
    </changeSet>

    <changeSet id="2025-06-19b" context="run" author="fraser">
        <comment>Create new system properties for Ascenscia</comment>
        <insert tableName="PropertyDescriptor">
            <column name="id" type="NUMERIC" value="NULL"/>
            <column name="defaultValue" type="STRING" value="ALLOWED"/>
            <column name="name" type="STRING" value="ascenscia.available"/>
            <column name="type" type="NUMERIC" value="3"/>
        </insert>
        <insert tableName="SystemProperty">
            <column name="id" type="NUMERIC" value="NULL"/>
            <column name="dependent_id" type="NUMERIC" value="NULL"/>
            <column name="descriptor_id"
                    type="NUMERIC"
                    valueComputed="(select id from PropertyDescriptor where name ='ascenscia.available')"/>
        </insert>
        <insert tableName="SystemPropertyValue">
            <column name="id" type="NUMERIC" value="NULL"/>
            <column name="value" type="String" value="DENIED"/>
            <column name="property_id"
                    type="NUMERIC"
                    valueComputed="(select sp.id from SystemProperty sp inner join PropertyDescriptor pd on sp.descriptor_id=pd.id where pd.name='ascenscia.available')"/>
        </insert>
    </changeSet>

    <changeSet id="2025-06-19c" context="run" author="fraser">
        <comment>Property Descriptor for Ascenscia App</comment>
        <insert tableName="PropertyDescriptor">
            <column name="id" type="NUMERIC" value="NULL"/>
            <column name="defaultValue" type="STRING" value="" />
            <column name="name" type="STRING" value="ASCENSCIA_APIKEY" />
            <column name="type" type="NUMERIC" value="2" />
        </insert>
    </changeSet>

    <changeSet id="2025-06-19d" context="run" author="fraser">
        <comment>AppConfigElementDescriptor for Ascenscia App: id, descriptor_id, app_id</comment>
        <sql>insert into AppConfigElementDescriptor (descriptor_id, app_id)
             select pd.id as descriptor_id, app.id as app_id
             from PropertyDescriptor pd, App app
             where app.name="app.ascenscia" and pd.name='ASCENSCIA_APIKEY';</sql>
    </changeSet>

</databaseChangeLog>
