<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-07-25" context="run" author="fraser">
        <comment>Create Stoichiometry tables</comment>

        <createTable tableName="Stoichiometry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="parent_reaction_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_parent_reaction"
                             references="RSChemElement(id)"/>
            </column>
            <column name="last_modified" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>


        <createTable tableName="StoichiometryMolecule">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stoichiometry_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_molecule_stoichiometry"
                             references="Stoichiometry(id)"/>
            </column>
            <column name="rs_chem_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_molecule_molecule"
                             references="RSChemElement(id)"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="formula" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="smiles" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="coefficient" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="molecular_weight" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="mass" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="actual_amount" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="actual_yield" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="limiting_reagent" type="BIT(1)" defaultValueBoolean="0">
            </column>
            <column name="notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_stoichiometry_parent_reaction" tableName="Stoichiometry">
            <column name="parent_reaction_id"/>
        </createIndex>

        <createIndex indexName="idx_stoichiometry_molecule_stoichiometry" tableName="StoichiometryMolecule">
            <column name="stoichiometry_id"/>
        </createIndex>

        <createIndex indexName="idx_stoichiometry_molecule_molecule" tableName="StoichiometryMolecule">
            <column name="rs_chem_id"/>
        </createIndex>

        <!-- Create AUD tables for auditing -->
        <createTable tableName="Stoichiometry_AUD">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
            <column name="parent_reaction_id" type="BIGINT"/>
            <column name="last_modified" type="TIMESTAMP"/>
        </createTable>

        <addPrimaryKey columnNames="id, REV" constraintName="PRIMARY" tableName="Stoichiometry_AUD"/>
        <addForeignKeyConstraint baseColumnNames="REV" baseTableName="Stoichiometry_AUD"
                                 constraintName="FK_stoichiometry_aud_rev" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="REV" referencedTableName="REVINFO"/>

        <createTable tableName="StoichiometryMolecule_AUD">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
            <column name="stoichiometry_id" type="BIGINT"/>
            <column name="rs_chem_id" type="BIGINT"/>
            <column name="role" type="VARCHAR(20)"/>
            <column name="formula" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="smiles" type="TEXT"/>
            <column name="coefficient" type="DOUBLE"/>
            <column name="molecular_weight" type="DOUBLE"/>
            <column name="mass" type="DOUBLE"/>
            <column name="actual_amount" type="DOUBLE"/>
            <column name="actual_yield" type="DOUBLE"/>
            <column name="limiting_reagent" type="BIT(1)"/>
            <column name="notes" type="TEXT"/>
        </createTable>

        <addPrimaryKey columnNames="id, REV" constraintName="PRIMARY" tableName="StoichiometryMolecule_AUD"/>
        <addForeignKeyConstraint baseColumnNames="REV" baseTableName="StoichiometryMolecule_AUD"
                                 constraintName="FK_stoichiometry_molecule_aud_rev" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="REV" referencedTableName="REVINFO"/>
    </changeSet>
</databaseChangeLog>