<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-11-13a" context="run" author="fraser">
        <comment>Create new table to hold the link between stoichiometry molecules and inventory items</comment>
        <createTable tableName="StoichiometryInventoryLink">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stoichiometry_molecule_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_molecule"
                             references="StoichiometryMolecule(id)"/>
            </column>
            <column name="container_id" type="BIGINT">
                <constraints foreignKeyName="fk_container" references="Container(id)"/>
            </column>
            <column name="sample_id" type="BIGINT">
                <constraints foreignKeyName="fk_sample" references="Sample(id)"/>
            </column>
            <column name="subSample_id" type="BIGINT">
                <constraints foreignKeyName="fk_subsample" references="SubSample(id)"/>
            </column>

            <column name="quantity_used" type="DECIMAL(19,6)"/>
            <column name="unit" type="VARCHAR(32)"/>

        </createTable>
        <createIndex tableName="StoichiometryInventoryLink" indexName="idx_stoich_molecule">
            <column name="stoichiometry_molecule_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="2025-11-13b" context="run" author="fraser">
        <comment>Create AUD table for StoichiometryInventoryLink</comment>
        <createTable tableName="StoichiometryInventoryLink_AUD">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>

            <column name="stoichiometry_molecule_id" type="BIGINT"/>
            <column name="container_id" type="BIGINT"/>
            <column name="sample_id" type="BIGINT"/>
            <column name="subSample_id" type="BIGINT"/>
            <column name="quantity_used" type="DECIMAL(19,6)"/>
            <column name="unit" type="VARCHAR(32)"/>
        </createTable>

        <addPrimaryKey tableName="StoichiometryInventoryLink_AUD" columnNames="id, REV" constraintName="PRIMARY"/>
        <addForeignKeyConstraint baseTableName="StoichiometryInventoryLink_AUD" baseColumnNames="REV"
                                 referencedTableName="REVINFO" referencedColumnNames="REV"
                                 constraintName="FK_stoichiometry_inventory_link_aud_rev"
                                 deferrable="false" initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>
