{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "ES2024",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Styles": ["src/util/styles"]
    },
    "resolveJsonModule": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "types": ["@testing-library/jest-dom", "@sa11y/vitest", "jquery"]
  }
}
