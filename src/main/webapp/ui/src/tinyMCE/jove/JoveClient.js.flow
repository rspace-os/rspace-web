// @flow

import { SearchParam } from "./Enums";

export type ArticleId = any;

export type Article = {|
  id: ArticleId,
  hasvideo: boolean,
  section: string,
  thumbnail: string,
  title: string,
  url: string,
  embed_url: string,
|};

export type JoveSearchResult = {|
  articlelist: Array<Article>,
  countall: number,
  pagecount: number,
  pagesize: number,
|};

declare export function search(
  searchParam: $Values<typeof SearchParam>,
  query: string,
  page: number,
  pageSize: number
): Promise<?{|
  data: JoveSearchResult,
|}>;

declare export function getArticle(
  articleId: ArticleId
): Promise<{| data: Article |}>;
