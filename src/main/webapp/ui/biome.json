{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
    "files": {
        "includes": [
            "**",
            "!!**/dist",
            "!!**/.vscode",
            "!!.git/",
            "!!**/dist/",
            "!!**/build/",
            "!!**/playwright-report/",
            "!!**/playwright/.cache/",
            "!!**/test-results/"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": { "recommended": true }
    },
    "javascript": { "formatter": { "quoteStyle": "double" } },
    "assist": {
        "enabled": true,
        "actions": { "source": { "organizeImports": "on" } }
    }
}
